<DistanceWindow>:
    name: "distance"

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'CrewScan_background.jpg'

    FloatLayout:
        cols:1

        Label:
            text: "Please get within 10 centimeters"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.105, "top":0.9}
            font_size: 40
            
        Label:
            text: "of the sensor"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.105, "top":0.8}
            font_size: 40
            
        ProgressBar:
            id: progress
            max: 100
            size_hint: (0.8, 0.2)
            pos_hint: {"x":0.105, "top":0.6}
            
            canvas:
                BorderImage:
                    border: (11, 11, 11, 11)
                    pos: 80, 190
                    size: 650, 100
                    source: 'grey.png'
                    
                BorderImage:
                    border: [int(min(self.width * (self.value / float(self.max)) if self.max else 0, 11))] * 4
                    pos: 80, 235
                    size: 650 * (self.value / float(self.max)) if self.max else 0, 11
                    source: 'green.png'

            
