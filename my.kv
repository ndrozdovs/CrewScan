<BeginWindow>:
    name: "begin"

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'CrewScan_background.jpg'

    FloatLayout:
        cols:1

        Label:
            text: "Press"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.05, "top":0.7}
            font_size: 40

        Label:
            text: "to Begin"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.12, "top":0.55}
            font_size: 40

        Image:
            source: 'GreenCircle.png'
            size_hint: 0.2, 0.2
            pos_hint: {"x":0.53, "top":0.7}


