<BeginWindow>:
    name: "begin"

    canvas.before:
        Color:
            rgba: 0.65, 0.65, 0.65, 0.25
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        cols:1

        Label:
            text: "Press"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.05, "top":0.7}
            font_size: 50

        Label:
            text: "to Begin"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.12, "top":0.55}
            font_size: 50
            
        ProgressBar:
            id: progress
            size_hint: (0.8, 0.8)
            pos_hint: {"x":0.12, "top":0.35}

        Image:
            source: 'GreenCircle.png'
            size_hint: 0.2, 0.2
            pos_hint: {"x":0.53, "top":0.7}


<InfoWindow>:
    name: "info"
    
    canvas.before:
        Color:
